<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".BattleActivity"
                android:background="@drawable/back_ground">

    <android.support.design.button.MaterialButton android:layout_width="104dp"
                                                  android:layout_height="46dp"
                                                  android:layout_marginTop="8dp"
                                                  android:layout_marginBottom="8dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:layout_constraintVertical_bias="0.959"
                                                  android:id="@+id/attack"
                                                  android:text="攻撃" app:layout_constraintTop_toTopOf="parent"
                                                  android:layout_marginStart="152dp" android:layout_marginEnd="8dp"
                                                  app:layout_constraintEnd_toStartOf="@+id/defence"
                                                  app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.design.button.MaterialButton android:layout_width="104dp"
                                                  android:layout_height="46dp"
                                                  android:layout_marginTop="8dp"
                                                  android:layout_marginBottom="8dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:layout_constraintVertical_bias="0.959"
                                                  android:id="@+id/defence"
                                                  android:text="防御" app:layout_constraintTop_toTopOf="parent"
                                                  android:layout_marginStart="280dp" android:layout_marginEnd="8dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="178dp"
            android:layout_height="148dp" app:srcCompat="@drawable/takoyaki_fight_hide"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.912"
            app:layout_constraintVertical_bias="0.123"/>

    <com.github.library.bubbleview.BubbleTextVew
            android:layout_width="171dp"
            android:layout_height="192dp"
            android:text="Hello BubbleTextVew"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            app:arrowWidth="20dp"
            app:angle="10dp"
            app:arrowHeight="30dp"
            app:arrowPosition="14dp"
            app:arrowLocation="top"
            app:bubbleColor="#777" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366" app:layout_constraintVertical_bias="0.037"
            android:id="@+id/enemy_takoyaki"/>


    <ImageView
            android:layout_width="178dp"
            android:layout_height="148dp" app:srcCompat="@drawable/takoyaki_fight_hide"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.036"
            app:layout_constraintVertical_bias="0.679"/>

    <com.github.library.bubbleview.BubbleTextVew
            android:layout_width="170dp"
            android:layout_height="160dp"
            android:text="Hello BubbleTextVew"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            app:arrowWidth="8dp"
            app:angle="10dp"
            app:arrowHeight="10dp"
            app:arrowPosition="14dp"
            app:arrowLocation="bottom"
            app:bubbleColor="#F5A9D0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.949"
            android:id="@+id/my_takoyaki"/>

    <android.support.design.button.MaterialButton android:layout_width="104dp"
                                                  android:layout_height="46dp"
                                                  android:layout_marginTop="8dp"
                                                  android:layout_marginBottom="8dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:layout_constraintVertical_bias="0.959"
                                                  android:id="@+id/special_attack"
                                                  android:text="特殊攻撃" app:layout_constraintTop_toTopOf="parent"
                                                  android:layout_marginStart="24dp"/>


</android.support.constraint.ConstraintLayout>